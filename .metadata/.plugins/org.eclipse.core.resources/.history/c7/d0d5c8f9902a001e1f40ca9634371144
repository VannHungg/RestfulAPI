package com.giaolang.bookstore.dto;

import java.io.Serializable;

//Interface Serializable để báo hiệu cho máy ảo biết là 
public class Book implements Serializable{
	private String isbn;
	private String title;
	private String author;
	private int edition; //số lần xuất bản
	private int publicshedYear;
	public Book() {
		super();
	}
	public Book(String isbn, String title, String author, int edition, int publicshedYear) {
		super();
		this.isbn = isbn;
		this.title = title;
		this.author = author;
		this.edition = edition;
		this.publicshedYear = publicshedYear;
	}
	public String getIsbn() {
		return isbn;
	}
	public void setIsbn(String isbn) {
		this.isbn = isbn;
	}
	public String getTitle() {
		return title;
	}
	public void setTitle(String title) {
		this.title = title;
	}
	public String getAuthor() {
		return author;
	}
	public void setAuthor(String author) {
		this.author = author;
	}
	public int getEdition() {
		return edition;
	}
	public void setEdition(int edition) {
		this.edition = edition;
	}
	public int getPublicshedYear() {
		return publicshedYear;
	}
	public void setPublicshedYear(int publicshedYear) {
		this.publicshedYear = publicshedYear;
	}
	
	
}
